{
    "name": "brandembassy/coding-standard",
    "description": "Brand Embassy Coding Standard",
    "license": "proprietary",
    "type": "phpcodesniffer-standard",
    "authors": [
        {
            "name": "Brand Embassy"
        }
    ],
    "autoload": {
        "files": [ "constants.php" ],
        "psr-4": {
            "BrandEmbassyCodingStandard\\": "src/BrandEmbassyCodingStandard"
        },
        "exclude-from-classmap": ["**/__fixtures__/**"]
    },
    "autoload-dev": {
        "psr-4": {
            "SlevomatCodingStandard\\": "vendor/slevomat/coding-standard/tests"
        },
        "files": [
            "vendor/squizlabs/php_codesniffer/autoload.php",
            "vendor/squizlabs/php_codesniffer/src/Util/Tokens.php"
        ]
    },
    "conflict": {
        "dg/bypass-finals": "*"
    },
    "require": {
        "php": "^7.4 || >=8.1",
        "composer-runtime-api": "^2.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5 || ^0.7",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-nette": "^1.0",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.4",
        "slevomat/coding-standard": "^8.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^7.5 || ^8.5",
        "mockery/mockery": "^1.3"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=BrandEmbassyCodingStandard src --ignore='*/__fixtures__/*' --runtime-set php_version 70400",
        "phpcbf": "vendor/bin/phpcbf --standard=BrandEmbassyCodingStandard src --ignore='*/__fixtures__/*' --runtime-set php_version 70400",
        "phpunit": "vendor/bin/phpunit src --filter '/\\\\(?!__fixtures__)\\w+\\\\\\w+::/'",
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon src --memory-limit=-1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "process-timeout": 1200
    }
}
