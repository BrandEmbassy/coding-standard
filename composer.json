{
    "name": "brandembassy/integration-coding-standard",
    "description": "Unified coding standard for BE integrations",
    "minimum-stability": "stable",
    "license": "proprietary",
    "type": "phpcodesniffer-standard",
    "authors": [
        {
            "name": "Brand Embassy"
        }
    ],
    "autoload": {
        "psr-4": {
            "BEIntegrationCodingStandard\\": "BEIntegrationCodingStandard"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\BEIntegrationCodingStandard\\": "tests/BEIntegrationCodingStandard"
        }
    },
    "require": {
        "squizlabs/php_codesniffer": "^3.2",
        "slevomat/coding-standard": "~4.5.2",
        "escapestudios/symfony2-coding-standard": "^3.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.9.2"
    },
    "scripts": {
        "post-deploy": [],
        "phpcs": "vendor/bin/phpcs --standard=BEIntegrationCodingStandard --extensions=php BEIntegrationCodingStandard tests",
        "phpcbf": "vendor/bin/phpcbf --standard=BEIntegrationCodingStandard --extensions=php BEIntegrationCodingStandard tests",
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyze -l max -c phpstan.neon BEIntegrationCodingStandard --memory-limit 200M",
        "post-install": "git config core.hooksPath .githooks",
        "post-update": "git config core.hooksPath .githooks"
    }
}
