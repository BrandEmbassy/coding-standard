{
    "name": "brandembassy/coding-standard",
    "description": "Unified BE Coding Standard",
    "license": "proprietary",
    "type": "phpcodesniffer-standard",
    "authors": [
        {
            "name": "Brand Embassy"
        }
    ],
    "autoload": {
        "psr-4": {
            "BECodingStandard\\": "BECodingStandard"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\BECodingStandard\\": "tests/BECodingStandard"
        }
    },
    "require": {
        "squizlabs/php_codesniffer": "^3.3",
        "slevomat/coding-standard": "~4.8.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
        "phpstan/phpstan": "^0.10",
        "phpstan/phpstan-strict-rules": "^0.10",
        "phpstan/phpstan-nette": "^0.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "mockery/mockery": "^1.2"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=BECodingStandard BECodingStandard tests",
        "phpcbf": "vendor/bin/phpcbf --standard=BECodingStandard BECodingStandard tests",
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon BECodingStandard"
    }
}
