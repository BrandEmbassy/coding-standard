{
    "name": "brandembassy/integration-coding-standard",
    "description": "Unified coding standard for BE integrations",
    "minimum-stability": "stable",
    "license": "proprietary",
    "authors": [
        {
            "name": "Brand Embassy"
        }
    ],
    "autoload": {
        "psr-4": {
            "BE\\CodingStandard\\": "src/BE/CodingStandard"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\BE\\CodingStandard\\": "tests/BE/CodingStandard"
        }
    },
    "require": {
        "squizlabs/php_codesniffer": "^3.2",
        "slevomat/coding-standard": "~4.5.2",
        "escapestudios/symfony2-coding-standard": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.9.2"
    },
    "scripts": {
        "post-deploy": [],
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyze -l max src --memory-limit 200M",
        "post-install": "git config core.hooksPath .githooks",
        "post-update": "git config core.hooksPath .githooks"
    }
}
